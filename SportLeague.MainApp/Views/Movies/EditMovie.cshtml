@using SportLigue.MainApp.Models.ViewModels;
@model SportLigue.MainApp.Models.ViewModels.EditMovieSetViewModel

@{
	ViewBag.Title = "Изменение данных о фильме";
	var currentMovieData = ViewData["CurrentMovieData"] as EditMovieGetViewModel;
}

<br />
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("EditMovie", "Movies", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<h4>На этой странице данные о фильме могут быть изменены в библиотеке.</h4>
	<hr />
	@Html.ValidationSummary("", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Value = currentMovieData?.Name })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextAreaFor(m => m.Description, new { @class = "form-control", @Value = currentMovieData?.Description })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.ReleaseYear, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.ReleaseYear, new { @class = "form-control", @Value = currentMovieData?.ReleaseYear })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.DirectorName, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.DirectorName, new { @class = "form-control", @Value = currentMovieData?.DirectorName })
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-2 control-label" for="@Html.NameFor(m => m.Poster)">@Html.NameFor(m => m.Poster)</label>
		<div class="col-md-10">
			<input class="form-control" type="file" name="@Html.NameFor(m => m.Poster)" id="@Html.NameFor(m => m.Poster)" />
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-default" value="Отправить" />
		</div>
	</div>
}